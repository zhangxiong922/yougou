/* pages/goods_list/index.wxss */
page {
  height: 100%;
}
.scroll {
  height: 100%;
}
.list {
  height: 100%;
}
.box {
  height: 100%;
}
 .goods {
  height: 100%;
 
  display: flex;
  flex-direction: column;
}
  .nav {
 
  height: 276rpx;
  display: flex;
  padding: 30rpx 10rpx;
  border-bottom: 2rpx solid #000;
  box-sizing: border-box;
}
  .nav .left {
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
  .nav .left image {
  width: 80%;
}
  .nav .right {
  flex:2;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 16rpx 0 16rpx 40rpx;
  justify-content: space-between;
}
  .nav .right text:first-child {
  display: block;
  width: 95%;
 overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-box-orient:vertical;
-webkit-line-clamp:2;
}
  .nav .right text:last-child {
  color: red;
  font-size: 40rpx;
}
 .nav .right text:first-child {
  font-size: 32rpx;
}